@model YazGelProje.Models.Admin
@{
    Layout = "~/Views/Shared/AdminSideBar.cshtml";
}
<script type="text/javascript" src="~/Content/jquery-3.1.1.min.js"></script>
<script>
    function myFunction() {
        var x = document.getElementById("myInput");
        if (x.type === "password") {
            x.type = "text";
        } else {
            x.type = "password";
        }
    }
    function myFunction1() {
        var x = document.getElementById("myInput1");
        if (x.type === "password") {
            x.type = "text";
        } else {
            x.type = "password";
        }
    }
</script>
<div class="col-lg-12">
    <div class="card card-Vertical card-default card-md mb-4">
        <div class="card-header" style="">
            <p style="font-size: 20px; text-align: center; align-items: center;"><b>PAROLAYI DEĞİŞTİR.</b></p>
        </div>
        <div class="card-body pb-md-30">
            <div class="Vertical-form" style="align-items:center;">
                <form method="post" action="/Admin/PasswordEdit">
                    <div style="background-color:green; text-align:center; align-items:center;">
                        <h3 style="color: white;">@ViewBag.Mesaj</h3>
                    </div>
                    <div style="background-color:darkred; text-align:center; align-items:center;">
                        <h3 style="color: white;">@ViewBag.Hata</h3>
                    </div>
                    <div class="form-group">
                        <label style="margin-left:15px">Yeni Parola</label><br />
                        <input type="password" class="form-control ih-medium ip-gray radius-xs b-light px-15" placeholder="Yeni Parola" name="password" id="myInput">
                        <div class="signUp-condition signIn-condition">
                            <div class="checkbox-theme-default custom-checkbox">
                                <input class="checkbox" type="checkbox" id="check-1"
                                       onclick="myFunction()">
                                <label for="check-1">
                                    <span class="checkbox-text">Şifreyi Göster</span>
                                </label>
                            </div>
                        </div>
                    </div>
                    <div class="form-group">
                        <label style="margin-left:15px">Parolayı Onayla</label><br />
                        <input type="password" class="form-control ih-medium ip-gray radius-xs b-light px-15" placeholder="Parolayı Onayla" name="confirmPassword" id="myInput1">
                        <div class="signUp-condition signIn-condition">
                            <div class="checkbox-theme-default custom-checkbox">
                                <input class="checkbox" type="checkbox" id="check-2"
                                       onclick="myFunction1()">
                                <label for="check-2">
                                    <span class="checkbox-text">Şifreyi Göster</span>
                                </label>
                            </div>
                        </div>
                    </div>
                    <div class="layout-button mt-25">
                        <button type="submit" class="btn btn-success btn-default btn-squared px-30" style="width:100%">Parolamı Güncelle</button>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>

