@model YazGelProje.Models.FileModel
@{
    Layout = "~/Views/Shared/SuperAdminSideBar.cshtml";
}

@using (Html.BeginForm("InternFileEdit", "SuperAdmin", FormMethod.Post))
{
    <div class="col-lg-12">
        <div class="card card-horizontal card-default card-md mb-4">
            <div class="card-body py-md-30">
                <div class="horizontal-form">
                    <form action="#">
                        <div class="form-group row mb-25">
                            <div class="col-sm-3 d-flex aling-items-center">
                                <label for="inputNameIcon" class=" col-form-label color-dark fs-14 fw-500 align-center">Dosya Adı</label>
                            </div>
                            <div class="col-sm-9">
                                <div class="with-icon">
                                    @Html.EditorFor(model => model.Name, new { htmlAttributes = new { @class = "form-control  ih-medium ip-gray radius-xs b-light", id = "inputNameIcon", placeholder = "Dosya Adı" } })
                                    @Html.ValidationMessageFor(model => model.Name, "", new { @class = "text-danger" })
                                </div>
                            </div>
                        </div>
                        <div class="layout-button mt-25">
                            <input type="submit" value="Güncelle" class="btn btn-success btn-default btn-squared px-30" style="width:100%"/>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
}
<script src="~/assets/vendor_assets/js/jquery/jquery-3.5.1.min.js"></script>

