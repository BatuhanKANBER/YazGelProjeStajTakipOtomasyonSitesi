@model YazGelProje.Models.Admin
@{
    Layout = "~/Views/Shared/SuperAdminSideBar.cshtml";
}

@using (Html.BeginForm("AdminAdd", "SuperAdmin", FormMethod.Post))
{
    <div class="col-lg-6">
        <div class="card card-horizontal card-default card-md mb-4">
            <div class="card-header">
                <h6>YENİ ADMIN EKLEME</h6>
            </div>
            <div class="card-body py-md-30">
                <div class="horizontal-form">
                    <form action="#">
                        <div class="form-group row mb-25">
                            <div class="col-sm-3 d-flex aling-items-center">
                                <label for="inputNameIcon" class=" col-form-label color-dark fs-14 fw-500 align-center">Name</label>
                            </div>
                            <div class="col-sm-9">
                                <div class="with-icon">
                                    @Html.EditorFor(model => model.AdminName, new { htmlAttributes = new { @class = "form-control  ih-medium ip-gray radius-xs b-light", id = "inputNameIcon", placeholder = "Admın Adı" } })
                                    @Html.ValidationMessageFor(model => model.AdminName, "", new { @class = "text-danger" })
                                </div>
                            </div>
                        </div>
                        <div class="form-group row mb-25">
                                <div class="col-sm-3 d-flex aling-items-center">
                                    <label for="inputEmailIcon" class=" col-form-label color-dark fs-14 fw-500 align-center">
                                        Email
                                        Address
                                    </label>
                                </div>
                                <div class="col-sm-9">
                                    <div class="with-icon">
                                        @Html.EditorFor(model => model.Email, new { htmlAttributes = new { @class = "form-control  ih-medium ip-gray radius-xs b-light", id = "inputEmailIcon", placeholder = "example@kou.edu.tr" } })
                                        @Html.ValidationMessageFor(model => model.Email, "", new { @class = "text-danger" })
                                    </div>
                                </div>
                            </div>
                        <div class="form-group row mb-0">
                            <div class="col-sm-3">
                                <label for="inputPasswordIcon" class=" col-form-label color-dark fs-14 fw-500 align-center">Password</label>
                            </div>
                            <div class="col-sm-9">
                                <div class="with-icon">
                                    @Html.EditorFor(model => model.Password, new { htmlAttributes = new { @class = "form-control  ih-medium ip-gray radius-xs b-light", id = "inputPasswordIcon", placeholder = "Parola" } })
                                    @Html.ValidationMessageFor(model => model.Password, "", new { @class = "text-danger" })
                                </div>
                                <div class="layout-button mt-25">
                                    <input type="submit" value="Ekle" class="btn btn-primary btn-default btn-squared px-30" />
                                </div>
                            </div>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
}<script src="~/assets/vendor_assets/js/jquery/jquery-3.5.1.min.js"></script>
