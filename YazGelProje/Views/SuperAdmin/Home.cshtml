@model YazGelProje.Models.SemesterStart
@{
    Layout = "~/Views/Shared/SuperAdminSideBar.cshtml";
}
<h2 style="text-align:center">Staj Dönemini Başlat-Durdur</h2>
<hr />
<p style="text-align:center"><b>STAJ DÖNEMİNİ BAŞLATMAK VEYA KAPATMAK İÇİN SEÇİLİ LİSTEYİ KULLANINIZ.</b></p>
<form method="post" action="/SuperAdmin/Home">
