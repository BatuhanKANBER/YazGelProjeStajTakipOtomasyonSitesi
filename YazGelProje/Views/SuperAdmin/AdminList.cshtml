@model  IEnumerable<YazGelProje.Models.Admin>
@{
    Layout = "~/Views/Shared/SuperAdminSideBar.cshtml";
}

<a href="@Url.Action("AdminAdd","SuperAdmin")" class="btn px-15 btn-primary">
    <i class="las la-plus fs-16"></i>Yeni Admin Ekle
</a>
<div class="userDatatable adv-table-table global-shadow border-0 bg-white w-100 faculty-table">
    <div class="table-responsive">
        <table class="table mb-0 table-borderless team-table" data-sorting="true"
               data-filter-container="#filter-form-container" data-paging-current="1"
               data-paging-position="right" data-paging-size="10">
            <thead>
                <tr class="userDatatable-header">
                    <th>
                        <span class="userDatatable-title">AdmınId</span>
                    </th>
                    <th>
                        <span class="userDatatable-title">Admin Adı</span>
                    </th>
                    <th>
                        <span class="userDatatable-title float-right">Parola</span>
                    </th>
                    <th>
                        <span class="userDatatable-title float-right">Email</span>
                    </th>
                    <th>
                        <span class="userDatatable-title float-right">Action</span>
                    </th>
                </tr>
            </thead>
            <tbody>
                @if (Model.Count() > 0)
                {
                    foreach (var admin in Model)
                    {
                        <tr>
                            <td>
                                <div class="userDatatable-content" style="align-items:center">
                                    @admin.AdminId
                                </div>
                            </td>
                            <td>
                                <div class="userDatatable-content">
                                    @admin.AdminName
                                </div>
                            </td>
                            <td>
                                <div class="userDatatable-content">
                                    @admin.Password
                                </div>
                            </td>
                            <td>
                                <div class="userDatatable-content">
                                    @admin.Email
                                </div>
                            </td>
                            <td>
                                <ul class="orderDatatable_actions mb-0 d-flex flex-wrap">
                                    <li>
                                        <a href="@Url.Action("AdminEdit","SuperAdmin", new {  id=admin.AdminId  })" class="edit">
                                            <span data-feather="edit"></span>
                                        </a>
                                    </li>
                                    <li>
                                        <a href="@Url.Action("AdminRemove","SuperAdmin", new {  id=admin.AdminId  })" class="remove">
                                            <span data-feather="trash-2"></span>
                                        </a>
                                    </li>
                                </ul>
                            </td>
                        </tr>
                    }
                }
                else
                {
                    <tr>
                        <td colspan="3">&nbsp;</td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
</div>

<script src="~/assets/vendor_assets/js/jquery/jquery-3.5.1.min.js"></script>
