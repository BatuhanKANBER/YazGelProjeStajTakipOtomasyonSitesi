@model IEnumerable<YazGelProje.Models.Student>
@{
    Layout = "~/Views/Shared/SuperAdminSideBar.cshtml";
}

<a href="@Url.Action("StudentAdd","SuperAdmin")" class="btn px-15 btn-primary">
    <i class="las la-plus fs-16"></i>Yeni Öğrenci Ekle
</a>


<div class="userDatatable adv-table-table global-shadow border-0 bg-white w-100 department-table">
    <div class="table-responsive">
        <div id="filter-form-container"></div>
        <table class="table mb-0 table-borderless team-table" data-sorting="true"
               data-filter-container="#filter-form-container" data-paging-current="1"
               data-paging-position="right" data-paging-size="10">
            <thead>
                <tr class="userDatatable-header">
                    <th>
                        <span class="userDatatable-title">StudentId</span>
                    </th>
                    <th>
                        <span class="userDatatable-title">Tc</span>
                    </th>
                    <th>
                        <span class="userDatatable-title float-right">Öğrenci No</span>
                    </th>
                    <th>
                        <span class="userDatatable-title float-right">Adı</span>
                    </th>
                    <th>
                        <span class="userDatatable-title float-right">Soyadı</span>
                    </th>
                    <th>
                        <span class="userDatatable-title float-right">Emaili</span>
                    </th>
                    <th>
                        <span class="userDatatable-title float-right">Fakültesi</span>
                    </th>
                    <th>
                        <span class="userDatatable-title float-right">Bölümü</span>
                    </th>
                    <th>
                        <span class="userDatatable-title float-right">Sınıfı</span>
                    </th>
                    <th>
                        <span class="userDatatable-title float-right">Telefon Numarası</span>
                    </th>
                    <th>
                        <span class="userDatatable-title float-right">Action</span>
                    </th>
                </tr>
            </thead>
            <tbody>
                @if (Model.Count() > 0)
                {
                    foreach (var student in Model)
                    {
                        <tr>
                            <td>
                                <div class="userDatatable-content" style="align-items:center">
                                    @student.StudentId
                                </div>
                            </td>
                            <td>
                                <div class="userDatatable-content">
                                    @student.Tc
                                </div>
                            </td>
                            <td>
                                <div class="userDatatable-content">
                                    @student.StudentNumber
                                </div>
                            </td>
                            <td>
                                <div class="userDatatable-content">
                                    @student.Name
                                </div>
                            </td>
                            <td>
                                <div class="userDatatable-content">
                                    @student.Surname
                                </div>
                            </td>
                            <td>
                                <div class="userDatatable-content">
                                    @student.Email
                                </div>
                            </td>
                            <td>
                                <div class="userDatatable-content">
                                    @student.Faculty
                                </div>
                            </td>
                            <td>
                                <div class="userDatatable-content">
                                    @student.Department
                                </div>
                            </td>
                            <td>
                                <div class="userDatatable-content">
                                    @student.Class
                                </div>
                            </td>
                            <td>
                                <div class="userDatatable-content">
                                    @student.PhoneNumber
                                </div>
                            </td>
                            <td>
                                <ul class="orderDatatable_actions mb-0 d-flex flex-wrap">
                                    <li>
                                        <a href="@Url.Action("StudentEdit","SuperAdmin", new {  id=student.StudentId  })" class="edit">
                                            <span data-feather="edit"></span>
                                        </a>
                                    </li>
                                    <li>
                                        <a href="@Url.Action("StudentRemove","SuperAdmin", new {  id=student.StudentId  })" class="remove">
                                            <span data-feather="trash-2"></span>
                                        </a>
                                    </li>
                                </ul>
                            </td>
                        </tr>
                    }
                }
                else
                {
                    <tr>
                        <td colspan="3">&nbsp;</td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
</div><script src="~/assets/vendor_assets/js/jquery/jquery-3.5.1.min.js"></script>