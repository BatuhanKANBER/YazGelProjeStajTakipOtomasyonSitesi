@model YazGelProje.Models.Teacher
@{
    Layout = "~/Views/Shared/TeacherSideBar.cshtml";
}
<head>
    <script type="text/javascript" src="~/Content/jquery-3.1.1.min.js"></script>

    <script type="text/javascript" src="~/Content/jquery.mask.min.js"></script>

    <script type="text/javascript">
        $(function () {
            $('#sicilno').mask("9999");
        });
    </script>

</head>
<div class="col-lg-12">
    <div class="card card-Vertical card-default card-md mb-4">
        <div class="card-header" style="">
            <p style="font-size: 20px; text-align: center; align-items: center;"><b>SİSTEM ÜZERİNDE KAYITLI OLAN BİLGİLERİNİZİ BURADAN GÜNCELLEYEBİLİRSİNİZ.</b></p>
        </div>
        <div class="card-body pb-md-30">
            <div class="Vertical-form" style="align-items:center;">
                <form method="post" action="/Teacher/ProfileEdit">
                    <div style="background-color:green; text-align:center; align-items:center;">
                        <h3 style="color: white;">@ViewBag.Mesaj</h3>
                    </div>
                    <div class="form-group">
                        <label style="margin-left:15px">Ad</label><br />
                        @Html.TextBoxFor(model => model.Name, new { @type = "text", @Name = "Name", @id = "Name", @class = "form-control ih-medium ip-gray radius-xs b-light px-15", placeholder = "Ad" })
                    </div>
                    <div class="form-group">
                        <label style="margin-left:15px">Soyad</label><br />
                        @Html.TextBoxFor(model => model.SurName, new { @type = "text", @Name = "SurName", @id = "SurName", @class = "form-control ih-medium ip-gray radius-xs b-light px-15t", placeholder = "Soyad" })
                    </div>
                    <div class="form-group">
                        <label style="margin-left:15px">Email</label><br />
                        @Html.TextBoxFor(model => model.Email, new { @type = "text", @Name = "Email", @id = "Email", @class = "form-control ih-medium ip-gray radius-xs b-light px-15", placeholder = "example@kocaeli.edu.tr" })
                    </div>
                    <div class="layout-button mt-25">
                        <button type="submit" class="btn btn-primary btn-default btn-squared px-30" style="width:100%">Bilgilerimi Güncelle</button>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>

